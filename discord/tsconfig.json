{
  "compilerOptions": {
      "module": "commonjs",
      "target": "es2020",
      "outDir": "build",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "strict": true,
      "sourceMap": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "noImplicitAny": false,
      "allowSyntheticDefaultImports": true,
      "baseUrl": ".",
      "paths": {
          "@/*": ["src/*"]
      }
  },
  "include": [
      "src/**/*.ts",
      "test/**/*.ts"
  ],
  "exclude": [
      "node_modules"
  ]
}